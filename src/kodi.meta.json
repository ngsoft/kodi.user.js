{
    "name": "KodiCast",
    "description": "Cast your streams to Kodi",
    "author": "Aymeric Anger",
    "namespace": "https://github.com/ngsoft/kodi.user.js",
    "run-at": "document-end",
    "noframes": true,
    "grant": [
        "GM_setValue",
        "GM_getValue",
        "GM_deleteValue",
        "GM_listValues",
        "GM_addValueChangeListener",
        "GM_removeValueChangeListener",
        "GM_notification",
        "GM_xmlhttpRequest",
        "GM_registerMenuCommand",
        "GM_unregisterMenuCommand",
        "GM_getResourceURL",
        "GM_addStyle",
        "GM_setClipboard"
    ],
    "resource": {
        "iziToast": "https://cdn.jsdelivr.net/npm/izitoast/dist/css/iziToast.css"
    },
    "require": [
        "https://cdn.jsdelivr.net/gh/mathiasbynens/utf8.js/utf8.js",
        "https://cdn.jsdelivr.net/npm/izitoast/dist/js/iziToast.js"
    ],
    "module": [
        "notify",
        "kodi",
        "gmconfig"
    ],
    "include": [
        "*"
    ],
    "connect": [
        "*"
    ],
    "icon": {
        "url": "https://kodi.tv/favicon-32x32.png"

    }
}